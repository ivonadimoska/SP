//Да се напише програма коjа за даден цел броj секунди
//коj се чита од стандарден влез, ќе ги отпечати на екран
//соодветните вредности во часови, минути и секунди

#include <iostream>
using namespace std;

int main() {
    int n;
    cin>>n;
    int seconds,minutes,hours;

    hours = n/3600;
    minutes = (n-(hours*3600))/60;
    seconds = n - (hours*3600) - (minutes*60);

    cout<<n<<" sekundi se : "<<hours<<":"<<minutes<<":"<<seconds;

    return 0;
}
