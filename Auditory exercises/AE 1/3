//Write a program that, for given sides of an equilateral triangle,
//prints its perimeter  and the square of its area
//(letâ€™s use a = 5, b = 7.5, c = 10.2).

#include <iostream>
using namespace std;

int main() {
    float a= 5.0;
    float b = 7.5;
    float c = 10.2;
    float perimeter = a + b + c;
    float s = perimeter / 2;
    float area = s * (s-a) * (s-b) * (s-c);

    cout<<"Perimeter: "<<perimeter<<endl;
    cout<<"Area: "<<area<<endl;

    return 0;
}
