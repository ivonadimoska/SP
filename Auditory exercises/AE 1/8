//Write a program that reads an uppercase letter from the standard input
//and prints the same letter as lowercase.
//- Note: Each character is represented by an ASCII number.

#include <iostream>
using namespace std;

int main() {
    char uppercase;

    cout<<"Enter uppercase letter: "<<endl;
    cin>>uppercase;

    cout<<uppercase<<" written in lowercase is: "<<char(uppercase + ("a"-"A"))<<endl;

    return 0;
}
