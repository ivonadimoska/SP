//Write a program that will print all four-digit numbers
//where the sum of the three least significant digits is equal
//to the most significant digit.
//4031 (4=0+3+1), 5131 (5=1+3+1)

#include <iostream>
using  namespace std;

int main() {
    int i = 1000;
    int n;
    int first_digit;
    int digit;
    int sum = 0;

    while (i<=9999) {
        first_digit = i/1000;
        n = i%1000;
        sum = 0;
        while (n>0) {
            digit = n%10;
            sum += digit;
            n = n/10;
        }
        if (sum == first_digit) {
            cout << i << endl;
        }
        i++;
    }
    return 0;
}
