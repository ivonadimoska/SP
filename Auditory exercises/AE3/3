//Write a program to calculate \$y = x^n\\$ for a given natural number n,
//n >= 1 and real number x

#include <iostream>
using namespace std;

int main() {
    int counter = 0, n;
    float x, y = 1;
    cout << "x: ";
    cin >> x;
    cout << "n: ";
    cin >> n;
    while (counter < n) {
        y *= x;
        counter++;
    }
    cout << x << "^" << n << " = " << y << endl;
    return 0;
}
