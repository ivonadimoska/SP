//Write a program that calculates for a given natural number
//the difference between the nearest prime number and that number itself.
//Example: For input of 573, The program should output577 â€“ 573 = 4

#include <iostream>
using namespace std;

int isPrime(int n) {
    if (n<=1) {
        return 0;
    }
    if (n==2) {
        return 1;
    }if (n%2==0) {
        return 0;
    }
        for (int i=3;i*i<=n;i+=2) {
            if (n%i==0) {
                return 0;
            }

        }
    return 1;
}
int firstLargerPrime(int n) {

    do {
        ++n;
    }while (!isPrime(n));

    return n;
}
int main() {
    int number;
    cin>>number;
    int firstLargestPrime = firstLargerPrime(number);
    cout<<firstLargestPrime<<" "<<firstLargestPrime-number<<endl;
    return 0;
}
