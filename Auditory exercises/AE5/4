//Write a program that will print all prime numbers less than 10000,
//whose sum of digits is also a prime number.
//At the end, print how many such numbers are found.

#include<iostream>
using namespace std;

int isPrime(int n) {
    if (n<=1) return 0;

    for (int i = 2; i*i<=n;i++) {
        if (n%i==0) return 0;
    }
    return 1;
}

int sum(int n) {
    int sum=0;
    while (n>0) {
        sum+=n%10;
        n/=10;
    }
    return sum;
}

int main() {
    int number, count = 0;

    for (number=2; number<=9999; number++) {
        if (isPrime(number) && isPrime(sum(number))) {
            cout<<number<<endl;
            count++;
        }
    }
    cout<<"Total: "<<count<<endl;
    return 0;
}

